<Mainpage>:
    Accordion:
        orientation: 'vertical'
        AccordionItem:
            title: 'Email Einstellungen'
            GridLayout:
                row_force_default:True
                row_default_height:40
                cols: 2
                padding: 10
                spacing: 10

                Label:
                    text: 'Email'
                    color: 1,1,1,1
                TextInput:
                    text: ''

                Label:
                    text: 'Passwort'
                    color: 1,1,1,1
                TextInput:
                    password: True
                    text:'default'

                Label:
                    text: 'SMTP'
                    color: 1,1,1,1
                TextInput:
                    text:'default'

                Label:
                    text: 'IMAP'
                    color: 1,1,1,1
                TextInput:
                    text:'default'



        AccordionItem:
            title: 'Kontakte'
            GridLayout:
                row_force_default:True
                row_default_height:40
                cols: 2
                padding: 10
                spacing: 10
                Label:
                    text: 'Email'
                    color: 1,1,1,1
                TextInput:
                    text: ''

                Label:
                    text: 'Public V1'
                    color: 1,1,1,1
                TextInput:
                    text:'default'

                Label:
                    text: 'Public V2'
                    color: 1,1,1,1
                TextInput:
                    text:'default'

                Button:
                    text: 'anlegen'

        AccordionItem:
            title: 'Keys'
            GridLayout:
                row_force_default:True
                row_default_height:40
                cols: 2
                padding: 10
                spacing: 10
                Label:
                    id: label_private
                    text: 'Private'
                    color: 1,1,1,1
                TextInput:
                    text: ''

                Label:
                    text: 'Public'
                    color: 1,1,1,1
                TextInput:
                    text:'default'

                Button:
                    text:'erzeuge key'
                    on_press: root.genkeys()

        AccordionItem:
            title: 'RSA'
            GridLayout:
                row_force_default:True
                row_default_height:40
                cols: 2
                padding: 10
                spacing: 10

