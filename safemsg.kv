<Mainpage>:
    Accordion:
        orientation: 'vertical'

        AccordionItem:
            title: 'Kontakte'
            GridLayout:
                row_force_default:True
                row_default_height:40
                cols: 2
                padding: 10
                spacing: 10
                Label:
                    text: 'Email'
                    color: 1,1,1,1
                TextInput:
                    text: ''

                Label:
                    text: 'Public V1'
                    color: 1,1,1,1
                TextInput:
                    text:'default'

                Label:
                    text: 'Public V2'
                    color: 1,1,1,1
                TextInput:
                    text:'default'

                Button:
                    text: 'anlegen'

        AccordionItem:
            title: 'Keys'
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    row_force_default:True
                    row_default_height:60
                    cols: 2
                    padding: 10
                    spacing: 10
                    Label:
                        id: label_private
                        text: 'Private'
                        color: 1,1,1,1
                    TextInput:
                        id: input_private
                        text: ''

                    Label:
                        id: label_public
                        text: 'Public'
                        color: 1,1,1,1
                    TextInput:
                        id: input_public
                        text:'default'

                Button:
                    text:'erzeuge key'
                    on_press: root.genkeys()

        AccordionItem:
            title: 'RSA'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Eingabe'

                TextInput:
                    text: 'da'

                Label:
                    text: 'Ausgabe'

                TextInput:
                    text: 'da'


                GridLayout:
                    row_force_default:False
                    row_default_height:30
                    cols: 2
                    padding: 10
                    spacing: 10



                    Button:
                        text:'verschlüssel mit gewähltem pub'
                        on_press: root.genkeys()

                    Button:
                        text:'verschlüssel mit geheimen priv'
                        on_press: root.genkeys()


                    Button:
                        text:'entschlüssel mit gewähltem pub'
                        on_press: root.genkeys()

                    Button:
                        text:'entschlüssel mit geheimen priv'
                        on_press: root.genkeys()