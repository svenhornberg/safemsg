<Mainpage>:

    Accordion:
        orientation: 'vertical'

        AccordionItem:
            title: 'Fremder Key'
            GridLayout:
                row_force_default:True
                row_default_height:40
                cols: 2
                padding: 10
                spacing: 10
                Label:
                    text: 'Public Key'
                    color: 1,1,1,1
                TextInput:
                    id: input_pubkey
                    text: ''

                Button:
                    text: 'Pubkey aus Zwischenablage'
                    on_press: root.clipPup()

                Button:
                    text: 'Key hinterlegen'
                    on_press: root.savepub()

        AccordionItem:
            title: 'Eigene Keys'
            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: label_public
                    size_hint: (1,0.2)
                    text: 'Public'
                    color: 1,1,1,1
                TextInput:
                    id: input_public
                    multiline: True

                Label:
                    id: label_private
                    size_hint: (1,0.2)
                    text: 'Private'
                    color: 1,1,1,1
                TextInput:
                    id: input_private
                    multiline: True


                Button:
                    size_hint: (1,0.2)

                    text:'Erzeuge Keys'
                    on_press: root.genkeys()
                Button:
                    size_hint: (1,0.2)

                    text:'PublicKey in Zwischenablage'
                    on_press: root.clipOwnpup()
                Button:
                    size_hint: (1,0.2)
                    text: 'Keys laden'
                    on_press: root.loadownkeys()

                Button:
                    size_hint: (1,0.2)
                    text: 'Keys hinterlegen'
                    on_press: root.safeownkeys()



        AccordionItem:
            title: 'RSA'
            BoxLayout:

                orientation: 'vertical'
                Label:
                    size_hint: (1,0.2)
                    text: 'Eingabe'

                TextInput:
                    id: input_rsa
                    text: ''

                Label:
                    size_hint: (1,0.2)
                    text: 'Ausgabe'

                TextInput:

                    id: output_rsa
                    text: ''


                GridLayout:
                    cols: 2
                    padding: 10
                    spacing: 10

                    Button:
                        text:'verschl端ssel mit fremd pub'
                        on_press: root.encryptpub()

                    Button:
                        text:'entschl端ssel mit fremd pub'
                        on_press: root.decryptpub()

                    Button:
                        text:'verschl端ssel mit eigenen priv'
                        on_press: root.encryptownpriv()

                    Button:
                        text:'entschl端ssel mit eigenen priv'
                        on_press: root.decryptownpriv()

                    Button:
                        text:'Eingabe aus Zwischenablage'
                        on_press: root.inputfromclip()

                    Button:
                        text:'Ausgabe in die Zwischenablage'
                        on_press: root.cliptooutput()